<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/report_image"
        android:layout_marginTop="15dp"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/danger1_pin" />

    <TextView
        android:id="@+id/report_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/report_address"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/report_image"
        android:gravity="center_vertical"
        
        android:text="report description"
        android:textColor="#FFFF00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/report_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/report_address"
        android:layout_alignRight="@+id/report_description"
        android:layout_below="@+id/report_description"
        android:gravity="center"
        android:text="report time"
        android:textSize="12sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/report_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/report_image"
        android:layout_toLeftOf="@+id/report_time"
        android:layout_toRightOf="@+id/report_image"
        android:layout_marginRight="4dp"
        android:gravity="left"
        android:text="report address"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>